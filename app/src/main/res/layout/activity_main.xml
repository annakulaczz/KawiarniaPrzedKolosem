<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.example.ania.kawiarniaprzedkolosem.MainActivity">

    <TextView
        android:id="@+id/welcome_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Witaj w restauracji XYZ"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/ask_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aby złożyć zamówienie wpisz numer stolika oraz wybierz pozycję z listy"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:textSize="14dp"
        android:layout_marginHorizontal="5dp"
        android:textColor="@color/colorPrimary"
        />

    <EditText
        android:id="@+id/table_number_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:hint="Podaj numer stolika"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/choose_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_marginTop="180dp"
        android:layout_marginHorizontal="15dp"
        android:text="WYBIERZ DANIE"
        android:textColor="@android:color/white"
        android:textSize="15dp"/>
</LinearLayout>
